{
  "name": "libre-billboardoo-frontend",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "npm-run-all -p dev:*",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"'",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "dev:worker": "esbuild ./app/entry.worker.ts --outfile=./public/entry.worker.js --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' --watch",
    "postinstall": "remix-esbuild-override"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@linaria/core": "^3.0.0-beta.21",
    "@remix-run/node": "^1.6.2",
    "@remix-run/react": "^1.6.4",
    "@remix-run/serve": "^1.6.1",
    "@remix-run/server-runtime": "^1.6.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.0",
    "framer-motion": "^6.4.3",
    "hamburger-react": "^2.5.0",
    "node-persist": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-responsive": "9.0.0-beta.10",
    "react-virtuoso": "^2.16.3",
    "web-push": "^3.4.5"
  },
  "devDependencies": {
    "@linaria/esbuild": "^3.0.0-beta.22",
    "@remix-run/dev": "^1.6.4",
    "@remix-run/eslint-config": "^1.6.4",
    "@tailwindcss/forms": "^0.5.2",
    "@types/node-persist": "^3.1.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "esbuild": "^0.14.49",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "postcss": "^8.4.14",
    "remix-esbuild-override": "^3.0.4",
    "remix-pwa": "^1.0.1",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
